<!DOCTYPE html>
<html>
  <head>
    <title>Find Room</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/findroom.css">
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/slider.css">
    <link rel="stylesheet" type="text/css" href="/css/socialbtn.css">
    <link href="/css/datepicker.min.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="/js/datepicker.min.js"></script>
    <script src="/js/datepicker.en.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
    <style type="text/css">
      body {
      background-color: black;
      }
    </style>
  </head>
  <body >
    <nav class="navbar fixed-top navbar-expand-md bg-company-black">
        <h1><a class="navbar-brand" href="/">Room Finder</a></h1>
        <div class="collapse navbar-collapse navbar-element">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" id="link1" href="/findroom">Find a Room</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/postroom" id="link2">Post a Room</a>
            </li>
            <% if (user) { %>
            <li class="nav-item active">
              <a class="nav-link" href="/signout" id="link3">Sign out</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/profile" id="link4">Profile</a>
            </li>
            <% } else { %>
            <li class="nav-item active">
              <a class="nav-link" id="link3" href="#signin" data-toggle="modal" data-target="#myModal">Sign In</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" id="link4" href="/signup">Sign Up</a>
            </li>
            <% } %>
          </ul>
        </div>
      </nav>
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Hey there, Welcome Back !!</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <!-- Modal body -->
          <div class="modal-body">
            <a href="/auth/facebook" id="sclbtn" style="color:#fff" class="btn btn-facebook icon-left"><i class="fa fa-facebook"></i> Sign In with Facebook</a>
            <a href="/signin" id="sclbtn" style="color:#fff" class="btn btn-email icon-left"><i class="fa fa-envelope"></i>  Sign In with Email</a>
          </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <p style="margin-top: 15px" class="mr-auto">Don't have an account?</p>
            <form action="/signup">
              <input type="submit" class = "signupbtn" value="Sign Up" />
            </form>
          </div>
        </div>
      </div>
    </div>
    <div id="content">
      <div id="searchContent">
        <br>
        <i class="fa fa-search fa-2x"></i>
        <span>Search : </span>
        <p><input type="text" name="search" id="search" placeholder="Enter a city, area or city"></p>
        <div class="container">
          <div class="row">
            <div class="col-sm-6" id="movein">
              <i class="fa fa-calendar fa-2x"></i>
              <span>Move In : </span>
              <input type="text" id="movein" placeholder="mm/dd/yyyy" class="datepicker-here" data-language='en' name="movein"  onblur="showMap()"/>
            </div>
            <div class="col-sm-6" id="duration">
              <i class="fa fa-clock-o fa-2x fa-flip-horizontal"></i>
              <span>Duration : </span>
              <select name="duration"  onblur="showMap()">
                <option disabled selected value>Select</option>
                <option>Short 1-3 (Months)</option>
                <option>Medium 3-6 (Months)</option>
                <option>Long 6+ (Months)</option>
              </select>
            </div>
          </div>
        </div>
        <p></p>
        <div id="price">
          <p> Price Range : <span class="slider-price" onblur="showMap()" >0</span> - <span class="slider-price2" onblur="showMap()">25000+</span>
          </p>
          <div class="sliders_step1">
            <div id="slider-range"></div>
          </div>
        </div>
        <hr>
        <div class="result">
          <div class="container">
      <div class="row" id="sliderrow">

      </div>
    </div>
        </div>
      </div>
      <div id="map">
        <input  hidden id="lat" value="17.68"/>
        <input  hidden id="lng" value="83.235"/>
      </div>
    </div>
    <script src="/js/slider.js"></script>
    <script type="text/javascript" src="/js/findroom.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBHEyAkrAoSgDJd_X2myljmZSBW3GqUau8&libraries=places&callback=initMap"></script>
  </body>
</html>